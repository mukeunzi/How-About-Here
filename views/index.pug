extends layout

block style
  link(rel='stylesheet', href='/stylesheets/reset.css')
  link(rel='stylesheet', href='/stylesheets/index.css')

block contents
  header(id='header')
    div(id='logo') 
      img(src='/images/logo.png')
    div(id='btn_area')
      if user
        span(id='user_id')= user.user_id
        button(type='button', id='logOutButton') 
          a 로그아웃
        button(type='button', id='postButton') 
          a 포스팅
        if user.user_auth == 'admin'
          button(type='button', id='adminButton') 
            a ADMIN
      else
        button(type='button', id='logInButton') 
          a 로그인
        button(type='button', id='signUpButton') 
          a 회원가입
  div(style='height:70px')

  div 검색!
  div
    select(name='region_name', id='region_name')
      option(value='') 선택
      each region in regionList
        option(value=region._id)= region.region_name
  div
    each tag in tagList
      input(type='checkbox', name='tag_list', class='tag_list', value=tag._id)
      | #{tag.tag_name}

  div(id='content', class='postList')
    if postList.length
      ul
        each post in postList
          li
            a(href=`/post/${post._id}`)
              img(src='/images/example.jpg')
            div 지역 : #{post.region_name.region_name}
            if post.tag_list.length
              span 태그 : 
              each tag in post.tag_list
                span #{tag.tag_name}
    else
      div 등록된 게시물이 없습니다.

block script
  script(type='text/javascript', src='/javascripts/index.js')
  script(type='text/javascript', src='/javascripts/post.js')