extends layout

block contents
  header
    h1= title
  section
    #place_name= postDetail.place_name
    #region_name= postDetail.region_name.region_name
    #detail_address= postDetail.detail_address
    #map(style='width:100%;height:350px;')
    div
      each tag in postDetail.tag_list
        span= tag.tag_name 
    div= postDetail.post_contents
    div= postDetail.star_rating
    div= postDetail.create_id.user_name
    div= postDetail.create_date
block script
  script(type='text/javascript', src='//dapi.kakao.com/v2/maps/sdk.js?appkey=fa0f4ce25fd2414a706ea4a8e45af254&libraries=services')
  script(type='text/javascript', src='/javascripts/kakao-map-detail.js')
